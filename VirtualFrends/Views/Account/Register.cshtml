@model VirtualFrends.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-1">Create Account</h3></div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputFirstName">First Name</label>
                                                    @Html.TextBoxFor(m => m.Nombres, new { placeholder = "Nombres Completos", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputLastName">Last Name</label>
                                                    @Html.TextBoxFor(m => m.Apellidos, new { placeholder = "Apellidos Completos", @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputEmailAddress">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputPassword">Password</label>
                                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputConfirmPassword">Confirm Password</label>
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Passwoord", @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputPais">Pais</label>
                                                    @Html.TextBoxFor(m => m.Pais, new { placeholder = "Pais", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputPaisFechaNacimiento">Fecha Nacimiento</label>
                                                    @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { placeholder = "Fecha Nacimiento", @class = "form-control" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" for="inputCelular">Celular</label>
                                                    @Html.TextBoxFor(m => m.Celular, new { placeholder = "Celular", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <fieldset disabled>
                                                    <div class="form-group">
                                                        <label class="small mb-1" for="inputConfirmPassword">Correo Anfitrion</label>
                                                        @Html.TextBoxFor(m => m.EmailAnfitrion, new { placeholder = ViewBag.Anfitrion, @class = "form-control" })
                                                    </div>
                                                </fieldset>
                                            </div>
                                        </div>


                                        <div class="form-group mt-4 mb-0">
                                            <input type="submit" class="btn btn-primary" value="Registrarse" />
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="login.html">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

