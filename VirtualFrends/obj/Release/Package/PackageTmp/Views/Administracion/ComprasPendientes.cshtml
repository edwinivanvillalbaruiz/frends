@using VirtualFrends.Models
@model IEnumerable<Compras>
<div class="card-header">
 <h3 class="text-center font-weight-light ">Compras Pendientes</h3>
 </div>




<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        OPERACIONES PENDIENTES
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Concepto</th>
                        <th>Email</th>
                        <th>Valor</th>
                        <th>Ver Imagen</th>
                        <th>Abonar</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th> @Html.DisplayFor(modelItem => item.Fecha) </th>
                            <th>@Html.DisplayFor(modelItem => item.Concepto) </th>
                            <th> @Html.DisplayFor(modelItem => item.Email)</th>
                            <th> @Html.DisplayFor(modelItem => item.Valor)</th>
                            <th>
                                @Html.ActionLink("Ver", "DownloadFile", new { id = item.Soporte })
                            </th>
                            <th>@Html.ActionLink("Ver", "Abonar", new { id = item.Id })  </th>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




