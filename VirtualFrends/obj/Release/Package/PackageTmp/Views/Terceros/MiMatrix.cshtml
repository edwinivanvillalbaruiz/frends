<div class="card-header"><h3 class="text-center font-weight-light ">Mi Matrix</h3></div>

@using VirtualFrends.Models
@model IEnumerable<TercerosNive>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        OPERACIONES PENDIENTES
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Nombres</th>
                        <th>Nivel</th>        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th> @Html.DisplayFor(modelItem => item.Email) </th>
                            <th>@Html.DisplayFor(modelItem => item.NombreC) </th>
                            <th> @Html.DisplayFor(modelItem => item.Nivel)</th>       
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>